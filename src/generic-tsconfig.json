{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "../dist/",
    "strict": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "lib": ["DOM", "ES2019"],
    "declaration": true,
    "sourceMap": true,
    "stripInternal": true,
    "composite": true
  },
  "exclude": ["node_modules", "dist", "webpack.config.js"]
}
